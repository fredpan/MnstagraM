<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="300dip" />
<!--            <stroke android:width="1dip" android:color="#ff3333" />-->
            <solid android:color="#ff0066"/>

        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="300dip" />
<!--            <stroke android:width="1dip" android:color="ff0000" />-->
            <gradient android:angle="-90" android:startColor="#ff0066" android:endColor="#ff3333"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="300dip" />
<!--            <stroke android:width="1dip" android:color="#ff0000" />-->
            <gradient android:angle="-90" android:startColor="#ff3333" android:endColor="#ff0066" />
        </shape>
    </item>
</selector>